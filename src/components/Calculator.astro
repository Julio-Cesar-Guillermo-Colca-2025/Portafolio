<div style="margin: 2rem auto; max-width: 320px; background-color: #1e1e1e; padding: 1rem; border-radius: 10px; box-shadow: 0 0 15px #00ffff;">
  <div id="calc-display" style="background: black; color: #0f0; font-size: 2rem; text-align: right; padding: 1rem; border-radius: 6px; margin-bottom: 1rem; font-family: monospace;">0</div>
  <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 0.5rem;">
    <button class="btn-ac" onclick="clearCalc()">AC</button>
    <button onclick="setOp('/')">รท</button>
    <button onclick="setOp('*')">ร</button>
    <button onclick="setOp('-')">-</button>

    <button onclick="appendNum('7')">7</button>
    <button onclick="appendNum('8')">8</button>
    <button onclick="appendNum('9')">9</button>
    <button onclick="setOp('+')">+</button>

    <button onclick="appendNum('4')">4</button>
    <button onclick="appendNum('5')">5</button>
    <button onclick="appendNum('6')">6</button>
    <button class="btn-equals" onclick="calculate()" style="grid-row: span 2; background-color: lime; color: black;">=</button>

    <button onclick="appendNum('1')">1</button>
    <button onclick="appendNum('2')">2</button>
    <button onclick="appendNum('3')">3</button>

    <button onclick="appendNum('0')" style="grid-column: span 2;">0</button>
    <button onclick="appendNum('.')">.</button>
  </div>
</div>

<script is:inline>
  let current = '';
  let operator = '';
  let operand = null;

  function appendNum(num) {
    current += num;
    document.getElementById('calc-display').textContent = current;
  }

  function setOp(op) {
    if (current === '') return;
    operand = parseFloat(current);
    operator = op;
    current = '';
  }

  function calculate() {
    if (!operator || current === '') return;
    const second = parseFloat(current);
    let result = 0;
    if (operator === '+') result = operand + second;
    else if (operator === '-') result = operand - second;
    else if (operator === '*') result = operand * second;
    else if (operator === '/') result = operand / second;
    document.getElementById('calc-display').textContent = result;
    current = '';
    operator = '';
  }

  function clearCalc() {
    current = '';
    operator = '';
    operand = null;
    document.getElementById('calc-display').textContent = '0';
  }
</script>
